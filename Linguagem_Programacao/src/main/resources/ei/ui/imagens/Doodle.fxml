   <children>
      <AnchorPane fx:id="pane_hbox_robot" stylesheets="@../../css/Stylesheet.css" HBox.hgrow="ALWAYS">
         <children>
            <TextField fx:id="txt_robot_level" layoutX="71.0" layoutY="140.0" />
            <Label layoutX="115.0" layoutY="34.0" text="Gamer Robot">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label layoutX="28.0" layoutY="145.0" text="Nível" />
            <TextField fx:id="txt_robot_health" layoutX="71.0" layoutY="180.0" />
            <Label layoutX="30.0" layoutY="185.0" text="Vida" />
            <TextField fx:id="txt_robot_score" layoutX="71.0" layoutY="220.0" />
            <Label layoutX="16.0" layoutY="225.0" text="Pontos" />
            <Button fx:id="btn_robot" layoutX="106.0" layoutY="280.0" mnemonicParsing="false" text="Enviar Robô" />
            <ImageView fitHeight="73.0" fitWidth="91.0" layoutX="113.0" layoutY="60.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../assets/GamerRobot.png" />
