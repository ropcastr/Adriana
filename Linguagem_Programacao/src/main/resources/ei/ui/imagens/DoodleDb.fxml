<?xml version="1.0" encoding="UTF-8"?>
<!-- DoodleDb.fxml atualizado para refletir layout de Doodle.fxml com suporte a DB -->
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox fx:id="hbox_doodle_db" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fatec.gov.br.e2.imagens.controllers.DoodleDbController">
   <children>
      <!-- Painel Robô -->
      <AnchorPane fx:id="pane_hbox_robot_db" stylesheets="@../../css/Stylesheet.css" HBox.hgrow="ALWAYS">
         <children>
            <TextField fx:id="txt_robot_nivel_db" layoutX="71.0" layoutY="140.0" promptText="Nível" />
            <Label layoutX="115.0" layoutY="34.0" text="Gamer Robot (DB)">
               <font><Font size="18.0" /></font>
            </Label>
            <Label layoutX="28.0" layoutY="145.0" text="Nível" />
            <TextField fx:id="txt_robot_vida_db" layoutX="71.0" layoutY="180.0" promptText="Vida" />
            <Label layoutX="30.0" layoutY="185.0" text="Vida" />
            <TextField fx:id="txt_robot_pontos_db" layoutX="71.0" layoutY="220.0" promptText="Pontos" />
            <Label layoutX="16.0" layoutY="225.0" text="Pontos" />
            <Button fx:id="btn_robot_db" layoutX="106.0" layoutY="280.0" mnemonicParsing="false" text="Salvar Robô DB" />
            <ImageView fitHeight="73.0" fitWidth="91.0" layoutX="113.0" layoutY="60.0" pickOnBounds="true" preserveRatio="true">
               <image><Image url="@../../assets/GamerRobot.png" /></image>
            </ImageView>
            <TextArea fx:id="txt_area_robot_db" layoutX="30.0" layoutY="340.0" prefHeight="160.0" prefWidth="240.0" promptText="Status ações Robô" wrapText="true" />
            <Button fx:id="btn_robot_recarregar_db" layoutX="30.0" layoutY="510.0" mnemonicParsing="false" text="Recarregar" />
            <Button fx:id="btn_robot_limpar_db" layoutX="158.0" layoutY="510.0" mnemonicParsing="false" text="Limpar Campos" />
         </children>
      </AnchorPane>
      <!-- Painel Tabelas -->
      <AnchorPane fx:id="pane_hbox_tables_db" prefWidth="220.0" stylesheets="@../../css/Stylesheet.css">
         <children>
            <TableView fx:id="table_view_robot_db" layoutY="5.0" prefHeight="280.0" prefWidth="220.0">
               <columns>
                  <TableColumn fx:id="colRobotId" prefWidth="50.0" text="ID" />
                  <TableColumn fx:id="colRobotNivel" prefWidth="55.0" text="Nível" />
                  <TableColumn fx:id="colRobotVida" prefWidth="55.0" text="Vida" />
                  <TableColumn fx:id="colRobotPontos" prefWidth="60.0" text="Pontos" />
               </columns>
            </TableView>
            <TableView fx:id="table_view_alien_db" layoutY="295.0" prefHeight="300.0" prefWidth="220.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
               <columns>
                  <TableColumn fx:id="colAlienId" prefWidth="50.0" text="ID" />
                  <TableColumn fx:id="colAlienTipo" prefWidth="90.0" text="Tipo" />
                  <TableColumn fx:id="colAlienForca" prefWidth="40.0" text="Força" />
                  <TableColumn fx:id="colAlienVida" prefWidth="40.0" text="Vida" />
               </columns>
            </TableView>
         </children>
      </AnchorPane>
      <!-- Painel Alien -->
      <AnchorPane fx:id="pane_hbox_alien_db" stylesheets="@../../css/Stylesheet.css" HBox.hgrow="ALWAYS">
         <children>
            <Label layoutX="151.0" layoutY="34.0" text="Alien (DB)">
               <font><Font size="18.0" /></font>
            </Label>
            <ImageView fitHeight="73.0" fitWidth="91.0" layoutX="132.0" layoutY="61.0" pickOnBounds="true" preserveRatio="true">
               <image><Image url="@../../assets/Alien.png" /></image>
            </ImageView>
            <TextField fx:id="txt_alien_tipo_db" layoutX="80.0" layoutY="140.0" promptText="Tipo" />
            <Label layoutX="40.0" layoutY="144.0" text="Tipo" />
            <TextField fx:id="txt_alien_forca_db" layoutX="80.0" layoutY="180.0" promptText="Força" />
            <Label layoutX="34.0" layoutY="184.0" text="Força" />
            <TextField fx:id="txt_alien_vida_db" layoutX="80.0" layoutY="220.0" promptText="Vida" />
            <Label layoutX="40.0" layoutY="224.0" text="Vida" />
            <Button fx:id="btn_alien_db" layoutX="101.0" layoutY="280.0" mnemonicParsing="false" text="Salvar Alien DB" />
            <TextArea fx:id="txt_area_alien_db" layoutX="40.0" layoutY="340.0" prefHeight="160.0" prefWidth="240.0" promptText="Status ações Alien" wrapText="true" />
            <Button fx:id="btn_alien_recarregar_db" layoutX="40.0" layoutY="509.0" mnemonicParsing="false" text="Recarregar" />
            <Button fx:id="btn_alien_limpar_db" layoutX="167.0" layoutY="509.0" mnemonicParsing="false" text="Limpar Campos" />
         </children>
      </AnchorPane>
   </children>
</HBox>
